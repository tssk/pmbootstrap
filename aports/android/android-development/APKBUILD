pkgname=android-development
pkgver=7.0.0_r34
pkgrel=0
pkgdesc="Platform engineering tools, sample code"
url="https://android.googlesource.com/platform/development/"
arch="x86_64"
license="APACHE2"
depends=""
makedepends=""
options="!check"
source="android_platform_development_android-21-$pkgver.tar.gz::https://android.googlesource.com/platform/development/+archive/android-7.0.0_r34/ndk/platforms/android-21.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir"

package() {

	# TODO This is not right but I do not now how to unpack it to folder

	mkdir -p "${pkgdir}/usr/include/android/"

	# sys Header files
	cp -r "${srcdir}/include/sys/" \
		"${pkgdir}/usr/include/android/"

	# linux Header files
	cp -r "${srcdir}/include/linux/" \
		"${pkgdir}/usr/include/android/"

	# api-level.h
	cp "${srcdir}/include/android/api-level.h" \
		"${pkgdir}/usr/include/android/"

	# asm-generic Header files
	cp -r "${srcdir}/include/asm-generic/" \
		"${pkgdir}/usr/include/android/"

	#TODO !!! Platform specific
	cp -r "${srcdir}/arch-x86_64/include/asm/" \
		"${pkgdir}/usr/include/android/"





}

sha512sums="23db01e13d46bf52b98acdc00e56690f055730cb48cfbc36a99d0b9987d3b67fbc98fe22daf93ed98656cab7f9f4136a8b3ecebf55f16aa08eab75e6dc46bcd1  android_platform_development_android-21-7.0.0_r34.tar.gz"
