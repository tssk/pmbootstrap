pkgname=ofono
pkgver=1.20
pkgrel=2
pkgdesc="Infrastructure for building mobile telephony (GSM/UMTS) applications"
url="https://01.org/ofono"
arch="all"
license="GPL2"
depends="bluez mobile-broadband-provider-info"
makedepends="autoconf automake libtool glib-dev dbus-dev eudev-dev libc-dev linux-headers bsd-compat-headers libexecinfo-dev mobile-broadband-provider-info libsamsung-ipc libsamsung-ipc-dev"
options="!check"
subpackages="$pkgname-dev $pkgname-doc"
source="
	https://git.kernel.org/pub/scm/network/$pkgname/$pkgname.git/snapshot/$pkgname-$pkgver.tar.gz
	$pkgname.initd
	0001-udevng-detect-non-usb.patch
	0002-udevng-remove-unneeded-prop.patch
	0003-isimodem-fix-sim-state-resp-cb.patch
	0010-samsungipcmodem-original.patch
	0011-samsungipcmodem-typo_fix.patch
	0012-samsungipcmodem-PWR_PHONE_STATE.patch
	0013-samsungipcmodem-SWITCHxIF.patch
"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./bootstrap
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--sbindir=/usr/sbin
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm755 "$srcdir/$pkgname.initd" "$pkgdir/etc/init.d/$pkgname"
	install -Dm644 "$srcdir/$pkgname-${pkgver}/plugins/ofono.rules" "$pkgdir/usr/lib/udev/rules.d/60-ofono.rules"
}

